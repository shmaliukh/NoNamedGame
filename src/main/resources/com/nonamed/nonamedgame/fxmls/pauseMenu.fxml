<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<Pane fx:id="pauseScreen" style="-fx-background-color: GRAY;" stylesheets="@pauseMenuStyle.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.nonamed.nonamedgame.scenes.PauseMenuController">
    <children>
        <Button fx:id="continueButton" onAction="#onContinueButtonClick" layoutX="410.0" layoutY="225.0"
                mnemonicParsing="false" prefHeight="100.0" prefWidth="400.0" text="Continue">
            <font>
                <Font size="50.0"/>
            </font>
        </Button>
        <Button fx:id="backButton" onAction="#onMainMenuButtonClick" layoutX="410.0" layoutY="492.0"
                mnemonicParsing="false" prefHeight="100.0" prefWidth="400.0" text="Back">
            <font>
                <Font size="50.0"/>
            </font>
        </Button>
        <Button fx:id="saveButton" onAction="#onRetryButtonClick" layoutX="410.0" layoutY="354.0"
                mnemonicParsing="false" prefHeight="100.0" prefWidth="400.0" text="Save">
            <font>
                <Font size="50.0"/>
            </font>
        </Button>
    </children>
</Pane>
